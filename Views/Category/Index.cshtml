@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["add"] != null)
{
    //<h2>@TempData["success"]</h2>
    <div class="alert alert-dismissible alert-success">
        <h4>Dodano nowy wpis!</h4>
    </div>
}else if(TempData["edit"] != null)
{
    <div class="alert alert-dismissible alert-warning">
        <h4 class="alert-heading">Uwaga! Wpis został zmieniony</h4>
    </div>
}else if(TempData["remove"] != null)
{
    <div class="alert alert-dismissible alert-danger">    
        <h4>Wpis został usunięty</h4>
    </div>
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-body-secondary">Lista zgłoszeń</h2>

        </div>

        <div class="col-6 text-end">
            <a asp-controller="category" asp-action="Create" class="btn btn-success">
                <i class="bi bi-file-earmark-plus"></i> &nbsp; Dodaj nowe zgłoszenie
            </a>

        </div>

    </div>
</div>


<table class="table table-bordered table-striped" style="width:100%">
    
    <thead>
        <tr>
            <th>
                Nazwa błędu
            </th>
            <th>
                Opis błędu
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Name
                </td>
                <td width="65%">
                    @obj.Description
                </td>
                <td width="15%" align="center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="category" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-warning"> Edycja<i class="bi bi-pencil"></i></a>
                    </div>

                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="category" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger"> Usuń<i class="bi bi-trash3-fill"></i></a>
                    </div>
                </td>
            </tr> 
        }
    </tbody>
</table>
