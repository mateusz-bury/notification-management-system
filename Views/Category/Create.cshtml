@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary">Lista zgłoszeń</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name">Nazwa</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"> </span>
        </div>
        <div class="mb-3">
            <label asp-for="Description">Opis</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"> </span>
        </div>
        <button type="submit" class="btn btn-success" style="width:150px">Dodaj</button>
        <a asp-controller="category" asp-action="Index" class="btn btn-secondary" style="width:150px">Powrót do listy</a>
    </div>
</form>